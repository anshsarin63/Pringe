<section class="hero">
  <div class="mx-auto flex items-center justify-between ">
    <div class="w-1/2 pl-16">
      <h6 class="text-lg"><em>Clothes that will talk on your behalf.</em></h6>
      <h1 class="text-3xl md:text-6xl font-bold">Try the best</h1>
      <button class="order-now rounded-full px-6 py-2 font-bold" onclick="window.location.href='/cart'">Order Now</button>
    </div>
    <div class="w-1/2">
      <img src="./img/hero.jpg" alt="hero" />
    </div>
  </div>
</section>
<section id="menu" class="menu container mx-auto center-align py-8">
  <h1 class="text-xl font-bold mb-4">All Collections</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 col-gap-12 row-gap-16">
    <% pizzas.forEach(function(pizza){ %>
      <div class="w-full sm:w-64">
        <img class="h-70 mx-auto mb-4" src="/img/<%= pizza.image %> " alt="" />
        <div class="text-center">
          <h2 class="text-lg mb-4"><%= pizza.name %> </h2>
          <span class="size text-xs rounded-full uppercase px-4 py-1"><%= pizza.size %> </span>
          <div class="flex justify-around mt-6">
            <span class="text-lg font-bold">â‚¹<%= pizza.price %> </span>
            <button data-pizza="<%= JSON.stringify(pizza) %> "
              class="add-to-cart flex text-center rounded-full px-6 py-1 font-bold"
            >
              <span>+</span>
              <span class="ml-3">Add</span>
            </button>
          </div>
        </div>
      </div>
    <% }) %> 
    
  </div>
</section>
